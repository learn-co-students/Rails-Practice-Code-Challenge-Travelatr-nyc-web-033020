<h1>Create New Blogger:</h1><br/>
<% if flash[:errors] %>
  <% flash[:errors].each do |error|%>
    <p><%= error %></p>
  <% end%>
<% end %>
<%= form_for @blogger do |f| %>
  <%= f.label "Name" %>
  <%= f.text_field :name %><br/>
  <%= f.label "Age" %>
  <%= f.number_field :age %><br/>
  <%= f.label "Bio" %>
  <%= f.text_area :bio %><br/>
  <%= f.submit %>
<% end %>