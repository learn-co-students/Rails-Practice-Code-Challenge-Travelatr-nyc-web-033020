<% if flash[:errors] %>
  <% flash[:errors].each do |error|%>
    <p><%= error %></p>
  <% end%>
<% end %>

<h1>Create Blogger</h1>

<%= form_for @blogger do |f| %>
    <%=f.label :name%>
    <%=f.text_field :name%><br>

    <%=f.label :bio%>
    <%=f.text_field :bio%><br>

    <%=f.label :age%>
    <%=f.number_field :age%><br>

    <%=f.submit value = "Create Blogger"%>
<% end %>
