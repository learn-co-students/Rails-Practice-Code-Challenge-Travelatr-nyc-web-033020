<% if flash[:errors] %> 
    <% flash[:errors].each do |error| %> 
        <p><%= error %></p> 
    <% end %> 
<% end %> 

<%= form_for(@blogger) do |f| %> 
    <div class="field"> 
        <%= f.label :name %> 
        <%= f.text_field :name %> 
    </div> 
    <div class="field"> 
        <%= f.label :age %> 
        <%= f.number_field :age %> 
    </div> 
    <div class="field"> 
        <%= f.label :bio %> 
        <%= f.text_field :bio %> 
    </div> 
    <div class="actions"> 
        <%= f.submit %> 
    </div> 
<% end %>  