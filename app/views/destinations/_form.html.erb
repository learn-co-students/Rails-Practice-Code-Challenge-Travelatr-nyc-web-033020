<% if flash[:errors] %> 
    <% flash[:errors].each do |error| %> 
        <p><%= error %></p> 
    <% end %> 
<% end %> 

<%= form_for(@destination) do |f| %> 
    <div class="field"> 
        <%= f.label :name %> 
        <%= f.text_field :name %> 
    </div> 
    <div class="field"> 
        <%= f.label :country %> 
        <%= f.text_field :country %> 
    </div> 
    <div class="actions"> 
        <%= f.submit %> 
    </div> 
<% end %>  