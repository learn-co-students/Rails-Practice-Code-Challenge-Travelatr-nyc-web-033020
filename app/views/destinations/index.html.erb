<h1>Here is a list of some awesome travel destinations:</h1> 

<div><%= link_to 'Create Destination', new_destination_path %></div> 
<br /> 

<table> 
    <thead> 
        <tr> 
            <th>Name</th> 
            <th>Country</th>
            <th></th> 
        </tr> 
    </thead> 
    <tbody> 
        <% @destinations.each do |destination| %> 
            <tr> 
                <td><%= destination.name %></td> 
                <td><%= destination.country %></td>  
                <td> 
                    <%= link_to 'View', destination %> | 
                    <%= link_to 'Edit', edit_destination_path(destination) %> | 
                    <%= link_to 'Delete', destination, method: :delete, data: { confirm: 'Are you sure you want to delete this destination?' } %> 
                </td> 
            </tr> 
        <% end %> 
    </tbody> 
</table>  