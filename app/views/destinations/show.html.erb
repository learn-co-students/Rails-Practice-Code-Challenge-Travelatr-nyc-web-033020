<div class="container"> 
    <h1><%= @destination.name%>, <%= @destination.country%> 
    <ul> 
        <% @destination.top_5.each do |post| %> 
            <li><%= link_to post.title, post_path(post) %></li> 
        <% end %> 
    </ul> 
    <p><strong>Average Blogger Age: <%= @destination.average_age %></strong></p>  
</div>