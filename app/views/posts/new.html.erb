<h1>Create a Post</h1>
<% if flash[:errors] %>
 <% flash[:errors].each do |error|%>
    <p><%= error %></p>
    <% end%>
<% end %>
<%=form_for @post do |f| %>
    <%= f.label :blogger %><br>
    <%= f.collection_select :blogger_name, Blogger.all, :id, :name%><br>
    <%= f.label :destination%><br>
    <%= f.collection_select :destination_id, Destination.all, :id, :name%><br>
    <%=f.label :title %><br>
    <%=f.text_field :title %><br>
    <%=f.label :content %><br>
    <%=f.text_area :content %><br>
    <%=f.submit %>
<% end %>