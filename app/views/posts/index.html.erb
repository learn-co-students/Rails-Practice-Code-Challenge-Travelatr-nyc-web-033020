<h1>Here is a list of some awesome travel blog posts:</h1>
<div><%= link_to 'Create Post', new_post_path %></div> 
<br /> 
<table> 
  <thead> 
    <tr> 
      <th>Title</th> 
      <th>Content</th>
      <th>Likes</th> 
      <th>Blogger Name</th> 
      <th>Destination Name</th> 
      <th></th>   
    </tr> 
  </thead> 
  <tbody> 
    <% @posts.each do |post| %> 
      <tr> 
        <td><%= post.title %></td> 
        <td><%= post.content %></td> 
        <td><%= post.likes %></td> 
        <td><%= post.blogger_id %> 
        <td><%= post.destination_id %></td>
        <td> 
          <%= link_to 'View', post %> | 
          <%= link_to 'Edit', edit_post_path(post) %> |
          <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure you want to delete?' } %>
        </td> 
      </tr> 
    <% end %> 
  </tbody> 
</table> 

