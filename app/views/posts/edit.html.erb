<% if flash[:errors] %>
  <% flash[:errors].each do |error|%>
    <p><%= error %></p>
  <% end%>
<% end %>

<h1>Edit a post</h1>

<%= form_for @post do |f| %>
    <%=f.label :title%>
    <%=f.text_field :title%>

    <%=f.label :content%>
    <%=f.text_field :content%>

    <%=f.label :likes%>
    <%=f.number_field :likes%>

    <%=f.label :blogger_id%>
    <%=f.collection_select :blogger_id, Blogger.all, :id, :name%>

    <%=f.label :destination_id%>
    <%=f.collection_select :destination_id, Destination.all, :id, :name%>

    <%=f.submit value= "Edit a post"%>
<% end %>