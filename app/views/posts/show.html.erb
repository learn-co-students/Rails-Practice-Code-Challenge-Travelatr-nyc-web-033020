<h2><%= @post.title %></h2>
<h5>Likes: <%= @post.likes %></h5>
<h4>
  By: <%= 
  link_to @post.blogger.name, 
  blogger_path(@post.blogger) 
  %>
</h4>
<h4>
  About: <%= 
    link_to @post.destination.name, 
    destination_path(@post.destination) 
  %>
</h4>

<p><%= @post.content %></p>

<%# button_to "Like", like_post_path(@post) %>
<%= button_to "Like", like_post_path(@post) %><br/>

<%= link_to "Edit Post", edit_post_path(@post) %>

<%= button_to "Delete", post_path(@post), method: :delete  %><br/>

